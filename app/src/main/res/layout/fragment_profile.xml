<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/light_gray"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="58dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person_purple"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/profile_back_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="USER PROFILE"
                android:textStyle="bold"
                android:textColor="@color/purple2"
                android:textSize="24dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit_purple"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/purple2"
            android:layout_marginBottom="20dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:padding="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/lavender"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/profile_pic"
                    android:layout_centerInParent="true"
                    android:background="@drawable/person_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_show_welcome"
                    android:layout_below="@id/profile_pic"
                    android:hint="Name"
                    android:textColorHint="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_margin="15dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_Name"
                android:background="@drawable/person_outline_purple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_full_name"
                android:layout_alignStart="@id/ic_profile_Name"
                android:hint="Full Name"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_full_name"
                android:id="@+id/divide_full_name"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_email"
                android:background="@drawable/email"
                android:layout_below="@id/divide_full_name"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_email"
                android:layout_below="@id/divide_full_name"
                android:layout_alignStart="@id/ic_profile_email"
                android:hint="E-mail"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_email"
                android:id="@+id/divide_email"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_dob"
                android:background="@drawable/calendar"
                android:layout_below="@id/divide_email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_dob"
                android:layout_alignStart="@id/ic_profile_dob"
                android:layout_below="@id/divide_email"
                android:hint="Date of Birth"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:id="@+id/divide_dob"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_dob"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_gender"
                android:background="@drawable/sex"
                android:layout_below="@id/divide_dob"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_gender"
                android:layout_alignStart="@id/ic_profile_gender"
                android:layout_below="@id/divide_dob"
                android:hint="Gender"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_gender"
                android:id="@+id/divide_gender"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_mobile"
                android:background="@drawable/mobile"
                android:layout_below="@id/divide_gender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_mobile"
                android:layout_alignStart="@id/ic_profile_mobile"
                android:layout_below="@id/divide_gender"
                android:hint="Mobile No"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_mobile"
                android:id="@+id/divide_mobile"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_profile_state"
                android:background="@drawable/map_icon"
                android:layout_below="@id/divide_mobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_profile_state"
                android:layout_alignStart="@id/ic_profile_state"
                android:layout_below="@id/divide_mobile"
                android:hint="State"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/purple2"
                android:layout_below="@id/t_profile_state"
                android:id="@+id/divide_state"
                android:layout_marginBottom="30dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="10dp"
                android:layout_below="@id/divide_state"
                app:cardCornerRadius="15dp"
                android:id="@+id/logOutBtn"
                android:layout_margin="0dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="LOG OUT"
                        android:textSize="24sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logout_purple"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="10dp"
                android:layout_below="@id/logOutBtn"
                app:cardCornerRadius="15dp"
                android:id="@+id/editProfileBtn"
                android:layout_margin="0dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Edit profile"
                        android:textSize="24sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logout_purple"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>