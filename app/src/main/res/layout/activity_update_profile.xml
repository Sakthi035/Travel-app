<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_arrow_purple"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/u_profile_back_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="UPDATE PROFILE"
                android:textStyle="bold"
                android:textColor="@color/purple2"
                android:textSize="24dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/u_profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person_purple"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/purple3"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Details to Update your Profile."
            android:id="@+id/t_update_head"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/e_profile_full_name"
            android:layout_height="45dp"
            android:hint="Enter Your Full Name"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/gray_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/e_profile_language"
            android:layout_height="45dp"
            android:hint="Enter Your Language"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/gray_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth (dd/mm/yyyy)*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/e_profile_dob"
            android:layout_height="45dp"
            android:hint="Enter Your Date of Birth"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/gray_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:id="@+id/radio_group_profile_gender"
            android:background="@drawable/gray_border"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_female"
                android:text="Female"
                android:textSize="16dp"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_male"
                android:text="Male"
                android:textSize="16dp"
                android:textColor="@color/dark_gray"
                android:layout_marginLeft="10dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/e_profile_mobile_no"
            android:layout_height="45dp"
            android:hint="Enter Your Mobile No"
            android:inputType="phone"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/gray_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State*"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:padding="6dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/e_profile_state"
            android:layout_height="45dp"
            android:hint="Enter Your State"
            android:inputType="text"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/gray_border"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/light_gray"
            android:id="@+id/profile_update_btn"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/update_ic_purple"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="UPDATE PROFILE"
                    android:textColor="@color/purple3"
                    android:textSize="24dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
</ScrollView>